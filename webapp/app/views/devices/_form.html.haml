= form_for @device do |f|
  - if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :version
    = f.text_field :version
  .field
    = f.label :serial
    = f.text_field :serial
  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'

= form_for @log_entry do |f|
  - if @log_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log_entry.errors.count, "error")} prohibited this log_entry from being saved:"
      %ul
        - @log_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :device
    = f.text_field :device
  .field
    = f.label :accelerometer_data
    = f.text_field :accelerometer_data
  .actions
    = f.submit 'Save'
